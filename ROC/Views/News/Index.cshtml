@model IList<ROC.Models.News>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_BackedLayout.cshtml";
}

<h2>新闻管理</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table>
    <tr>
        <th></th>
        <th>
            ModifiedTime
        </th>
        <th>
            Title
        </th>
        <th>
            Source
        </th>
        <th>
            ContentTime
        </th>
       
        <th>
            CategoryID
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
        <td>
            @String.Format("{0:g}", item.ModifiedTime)
        </td>
        <td>
            @item.Title
        </td>
        <td>
            @item.Source
        </td>
        <td>
            @item.ContentTime.ToShortDateString()
        </td>
       
        <td>
            @item.CategorysList.Single(m=>m.Id==item.CategoryID).CategoryName
        </td>
    </tr>
}

</table>

