<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/themes/base/jquery-ui.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.4.4.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/EditorHookup.js")" type="text/javascript"></script>
    @RenderSection("HeadStaff",false)
</head>

<body>
    <div class="page">

        <div id="header">
            <div id="title">
                <h1>Backend Management</h1>
            </div>

            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>

            <div id="menucontainer">

                <ul id="menu">
                    <li>@Html.ActionLink("新闻管理", "Index", "News")</li>
                    <li>@Html.ActionLink("新闻分类管理", "Index", "NewsCategory")</li>
                    <li>@Html.ActionLink("图片故事管理","Index","PicStory")</li>
                    <li>@Html.ActionLink("图片故事分类管理", "Index", "PicStoryCategory")</li>
                    <li>@Html.ActionLink("修改密码","ChangePassword","Account")</li>
                </ul>

            </div>
        </div>

        <div id="main">
            @RenderBody()
            <div id="footer">
            </div>
        </div>
    </div>
</body>
</html>
